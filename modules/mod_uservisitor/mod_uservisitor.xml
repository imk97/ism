<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>User Visitor - en</name>
    <author>Itmam</author>
    <version>1.0.1</version>
    <description>A user visitor module.</description>
    <files>
        <filename>mod_uservisitor.xml</filename>
        <filename module="mod_uservisitor">mod_uservisitor.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>sql</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name = "latest_update" 
                    type = "calendar" 
                    showtime = "false" 
                    todaybutton = "true" 
                    translateformat = "true"
                    label = "Tarikh Kemaskini"
                    format = "%d %b %Y"
                    required = "true" />
            </fieldset>
        </fields>
    </config>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>
    <updateservers>
        <server type="extension" name="Visitor" priority="1">localhost/uservisitor_update.xml</server>
    </updateservers>
</extension>