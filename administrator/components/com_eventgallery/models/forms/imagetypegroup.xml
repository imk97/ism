<?xml version="1.0" encoding="utf-8"?>
<form name="imagetypegroup">
    <fieldset name="general" label="COM_EVENTGALLERY_EVENTS_OPTIONS_DETAILS_LABEL" description="COM_EVENTGALLERY_EVENTS_OPTIONS_DETAILS_DESC">
      <field name="id" type="hidden" default="0" label="JGLOBAL_FIELD_ID_LABEL"
      readonly="true" class="readonly"
      description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="name"
               type="text"
               label="COM_EVENTGALLERY_IMAGETYPEGROUP_NAME"
               description="COM_EVENTGALLERY_IMAGETYPEGROUP_NAME_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPEGROUP_NAME_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />
        <field name="displayname"
               type="localizabletext"
               label="COM_EVENTGALLERY_IMAGETYPEGROUP_DISPLAYNAME"
               description="COM_EVENTGALLERY_IMAGETYPEGROUP_DISPLAYNAME_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPEGROUP_DISPLAYNAME_PLACEHOLDER"
               required="true"
               validate=""
               class="input-xlarge"
                />
        <field name="description"
               type="localizabletext"
               inputtype="textarea"
               label="COM_EVENTGALLERY_IMAGETYPEGROUP_DESCRIPTION"
               description="COM_EVENTGALLERY_IMAGETYPEGROUP_DESCRIPTION_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_IMAGETYPEGROUP_DESCRIPTION_PLACEHOLDER"
               required="false"
               validate=""
               class="input-xlarge"
               filter="EventgalleryLibraryDatabaseLocalizablestring::filterText"
        />
        <field name="published" type="radio" class="btn-group" default="0" label="COM_EVENTGALLERY_EVENTS_PUBLISHED" description="COM_EVENTGALLERY_EVENTS_PUBLISHED_DESCRIPTION">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>

    </fieldset>


</form>
