<?xml version="1.0" encoding="utf-8"?>
<form name="message">
    <fieldset name="message">
        <field name="email"
               type="html5text"
               inputtype="email"
               label="COM_EVENTGALLERY_MESSAGES_EMAIL_LABEL"
               labelclass="control-label col-form-label col-sm-3"
               class="form-control"
               description="COM_EVENTGALLERY_MESSAGES_EMAIL_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_MESSAGES_EMAIL_PLACEHOLDER"
               required="false"
               validate=""
                />
        <field name="message"
               type="textarea"
               inputtype="text"
               label="COM_EVENTGALLERY_MESSAGES_MESSAGE_LABEL"
               labelclass="control-label col-form-label col-sm-3"
               class="form-control"
               description="COM_EVENTGALLERY_MESSAGES_MESSAGE_DESCRIPTION"
               placeholder="COM_EVENTGALLERY_MESSAGES_MESSAGE_PLACEHOLDER"
               required="true"
               validate=""
               rows="5"
                />
        <field name="accept_data_privacy" type="checkbox"
               label="COM_EVENTGALLERY_MESSAGES_ACCEPT_DATA_PRIVACY_LABEL"
               labelclass="control-label col-form-label col-sm-3"
               class="form-check-input"
               description="COM_EVENTGALLERY_MESSAGES_ACCEPT_DATA_PRIVACY_DESC" value="" required="true"
        />
        <field name="captcha" type="captcha" validate="captcha"
               label="COM_EVENTGALLERY_MESSAGES_CAPTCHA_LABEL"
               labelclass="control-label col-form-label col-sm-3"
               class=""
               description="COM_EVENTGALLERY_MESSAGES_CAPTCHA_DESC" >
        </field>
    </fieldset>
</form>
